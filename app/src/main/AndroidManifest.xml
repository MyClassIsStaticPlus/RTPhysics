<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.b7.rtphysics" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HandbookMenuActivity"
            android:label="@string/handbook_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".HandbookTabMainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".HandbookMenuActivity" >

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".HandbookMenuActivity"/>
        </activity>

        <activity android:name=".CalculatorMainActivity"
            android:label="@string/calculator_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".HandbookMenuActivity" >

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".HandbookMenuActivity"/>

        </activity>

        <activity android:name=".ConventerMainActivity"
            android:label="@string/conventer_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".HandbookMenuActivity" >

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".HandbookMenuActivity"/>

        </activity>

        <activity android:name=".SearchMainActivity"
            android:label="@string/search_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".HandbookMenuActivity" >

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".HandbookMenuActivity"/>

        </activity>
    </application>
</manifest>
